---
import lineUpImage from "../images/Elemente_Mainpage_Lineup.png";
import RPImage from "../images/Elemente_Mainpage_Rahmenprogramm.png";
import FestivalInfosImage from "../images/Elemente_Mainpage_Festivalinfos_Small.png";
import TicketsImage from "../images/Elemente_Mainpage_Tickets.png";
import AboutImage from "../images/Elemente_Mainpage_Ueberuns.png";
import HelfenImage from "../images/Elemente_Mainpage_helfen.png";
import AwarenessImage from "../images/Elemente_Mainpage_Awareness.png";
import BarriereImage from "../images/Elemente_Mainpage_Barrierefreiheit.png";

import pauseIcon from "../images/icons/pause_icon.svg";
import playIcon from "../images/icons/play_icon.svg";
import instagramIcon from "../images/icons/instagram.svg";
import facebookIcon from "../images/icons/facebook.svg";
import spotifyIcon from "../images/icons/spotify.svg";

import Sponsors from "../components/Sponsors.astro";
---

<script>
  const pauseButton = document.getElementById("pause-animation");
  const playButton = document.getElementById("start-animation");
  const title = document.getElementById("title");

  function pauseAnimation() {
    pauseButton.style.display = "none";
    playButton.style.display = "block";
    title.classList.add("no-animation");
    playButton.addEventListener("click", startAnimation);
  }

  function startAnimation() {
    playButton.style.display = "none";
    pauseButton.style.display = "block";
    title.classList.remove("no-animation");
  }

  pauseButton.addEventListener("click", pauseAnimation);
</script>

<div class="content">
  <div class="title" id="title">Gisch eus de Rest?</div>
  <div class="title-mobile">Gisch eus de Rest?</div>
  <div class="spenden">
    <p class="subtitle">Das kleinLaut Festival braucht deine Unterstützung</p>
    <p><a href="https://spenden.kleinlautfestival.ch">Jetzt spenden</a></p>
  </div>
  <div class="animation-controls not-on-mobile">
    <button id="start-animation"
      ><img src={playIcon} alt="Animation starten" /></button
    >
    <button id="pause-animation"
      ><img src={pauseIcon} alt="Animation stoppen" /></button
    >
  </div>
  <div class="social-icons">
    <a href="https://www.instagram.com/kleinlaut_festival/" target="_blank"
      ><img src={instagramIcon} /></a
    >
    <a href="https://www.facebook.com/kleinlaut.festival" target="_blank"
      ><img src={facebookIcon} /></a
    >
    <a
      href="https://open.spotify.com/playlist/6duiW6uc9erLhy9j5OnZAI?si=9dd75edcb92d4691"
      target="_blank"><img src={spotifyIcon} /></a
    >
  </div>
  <div class="box-up">
    <a class="nav-item" href="/lineup">
      <img src={lineUpImage} />
      <span class="nav-text">Lineup</span>
    </a>
    <a class="nav-item rahmenprogramm" href="/rahmenprogramm">
      <img src={RPImage} />
      <span class="nav-text">Rahmenprogramm</span>
    </a>
  </div>
  <div class="box-down">
    <a class="nav-item rahmenprogramm" href="/rahmenprogramm">
      <img src={RPImage} />
      <span class="nav-text">Rahmen-programm</span>
    </a>
    <div class="double-box">
      <a class="nav-item" href="/festivalinfos">
        <img src={FestivalInfosImage} />
        <span class="nav-text">Festivalinfos</span>
      </a>
      <a
        class="nav-item"
        href="https://www.petzi.ch/de/events/52618-kleinlaut-festival-kleinlaut-festival-2023/"
        target="_blank"
      >
        <img src={TicketsImage} />
        <span class="nav-text">Tickets</span>
      </a>
    </div>
    <div class="double-box">
      <a class="nav-item" href="/ueberuns">
        <img src={AboutImage} />
        <span class="nav-text">über uns</span>
      </a>
      <a class="nav-item" href="/helfen">
        <img src={HelfenImage} />
        <span class="nav-text">helfen</span>
      </a>
    </div>
    <div class="double-box">
      <a class="nav-item" href="/awareness">
        <img src={AwarenessImage} />
        <span class="nav-text">Awareness</span>
      </a>
      <a class="nav-item not-on-mobile" href="/barrierefreiheit">
        <img src={BarriereImage} />
        <span class="nav-text">Barrierefreiheit</span>
      </a>
      <a class="nav-item mobile" href="/barrierefreiheit">
        <img src={BarriereImage} />
        <span class="nav-text">Barriere-freiheit</span>
      </a>
    </div>
  </div>
</div>
<Sponsors />

<style>
  .content {
    overflow-x: hidden;
    height: 140vh;
    /* height: var(--doc-height); */
  }
  .title,
  .title-mobile {
    position: absolute;
    top: calc((100vh - 100px) / 2);
    font-family: "PicNic-Regular";
    font-size: 4em;
    text-align: center;
    height: 100px;
    width: 100%;
    animation-name: rightToLeft;
    animation-duration: 10s;
    animation-timing-function: linear;
    animation-iteration-count: infinite;
  }
  @keyframes rightToLeft {
    0% {
      transform: translateX(100vw);
    }
    100% {
      transform: translateX(-100vw);
    }
  }

  .no-animation {
    animation: none;
  }

  .title-mobile {
    display: none;
  }

  .spenden {
    position: absolute;
    top: calc((100vh - 100px) / 2 + 100px);
    font-family: "PicNic-Regular";
    font-size: 4em;
    text-align: center;
    height: 100px;
    width: 100%;
  }

  .spenden a,
  .spenden a:visited {
    text-decoration: none;
    color: black;
  }

  .spenden a:hover {
    color: white;
    text-shadow: -1px -1px 0 #000, 1px -1px 0 #000, -1px 1px 0 #000,
      1px 1px 0 #000;
  }

  .subtitle {
    font-size: 0.6em;
  }

  .animation-controls {
    position: absolute;
    top: calc((100vh - 180px) / 2);
    left: 10px;
    z-index: 10;
  }

  .animation-controls button {
    background: none;
    color: inherit;
    border: none;
    padding: 0;
    cursor: pointer;
  }

  .animation-controls button:hover {
    outline: 2px solid black;
  }
  .animation-controls img {
    width: 30px;
  }

  #start-animation {
    display: none;
  }

  .social-icons {
    position: absolute;
    top: calc((100vh - 180px) / 2);
    right: 20px;
    z-index: 10;
  }

  .social-icons img {
    width: 30px;
  }

  .social-icons img:hover {
    outline: 2px solid black;
  }

  .box-up,
  .box-down {
    height: calc((100vh - 100px) / 2);
    display: grid;
    grid-template-columns: 2fr 1fr;
  }

  .box-up {
    grid-template-columns: 2fr 1fr;
  }

  .box-down {
    grid-template-columns: 1fr 1fr 1fr;
    border-top: 2px solid black;
    position: absolute;
    top: calc(100vh - 100px);
    width: 100%;
  }

  .box-down .rahmenprogramm {
    display: none;
  }

  .double-box {
    display: grid;
    grid-template-rows: 1fr 1fr;
  }

  .nav-item {
    position: relative;
    max-height: calc((100vh - 100px) / 2);
    color: black;
    border-right: 2px solid black;
    border-bottom: 2px solid black;
  }

  .box-up .nav-item {
    max-height: calc((100vh - 104px) / 2);
  }

  .nav-item:hover {
    color: white;
    text-shadow: -1px -1px 0 #000, 1px -1px 0 #000, -1px 1px 0 #000,
      1px 1px 0 #000;
  }

  .double-box .nav-item {
    max-height: calc((100vh - 100px) / 4);
  }

  .nav-item:focus-visible {
    border: 4px solid black;
    outline: none;
    color: white;
    text-shadow: -1px -1px 0 #000, 1px -1px 0 #000, -1px 1px 0 #000,
      1px 1px 0 #000;
  }

  .nav-item img {
    width: 100%;
    height: 100%;
    object-fit: fill;
  }

  .nav-text {
    position: absolute;
    left: 4px;
    top: 0;
    font-family: "PicNic-Regular";
    font-size: 2.5em;
  }

  .mobile {
    display: none;
  }

  @media screen and (max-width: 767px) {
    .mobile {
      display: block;
    }

    .not-on-mobile {
      display: none;
    }

    .social-icons {
      /* top: calc(100vh + 40px); */
      display: none;
    }
    .box-up .rahmenprogramm {
      display: none;
    }

    .box-up {
      grid-template-columns: 1fr;
      height: calc(var(--doc-height) / 4);
    }

    .title {
      display: none;
    }
    .title-mobile {
      display: block;
      height: calc(var(--doc-height) / 8);
      top: calc(var(--doc-height) / 4);
      font-size: 2em;
      padding-top: 30px;
      animation: none;
    }

    .spenden {
      font-size: 1.5em;
      height: 100%;
      width: 100%;
    }

    .subtitle {
    }

    .box-down {
      height: calc(var(--doc-height) / 2);
      grid-template-columns: 1fr 1fr;
    }

    .box-down .rahmenprogramm {
      display: block;
    }

    .box-up .nav-item img {
      max-height: calc(/4);
    }

    .nav-text {
      overflow-wrap: break-word;
      font-size: 1.5em;
    }
  }
</style>
